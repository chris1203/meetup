<%= simple_form_for [@group, @event] do |f| %>
<div class="form-group">
  <%= f.input :topic, input_html: {class: "form-control"} %>
  <%= f.input :description, input_html: {class: "form-control"} %>
  <%= f.input :time %>
  <%= f.input :location, input_html: {class: "form-control"} %>
</div>

<%= f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submitting..."}%>
<% end %>
